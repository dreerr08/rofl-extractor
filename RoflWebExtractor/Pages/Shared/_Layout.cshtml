<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Extrator ROFL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2351748174167881"
     crossorigin="anonymous"></script>
</head>
<body class="bg-dark text-white">
    <div class="hero-section">
        <div class="container">
            <header class="d-flex justify-content-between align-items-center py-3">
                <a href="/" class="btn btn-outline-light">
                    <i class="bi bi-house-fill"></i> Início
                </a>
                <div class="d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="text-white me-3">Olá, @User.Identity.Name!</div>
                        @if (User.HasClaim("IsAdmin", "true"))
                        {
                            <a href="/Admin" class="btn btn-primary me-2">Painel Admin</a>
                        }
                        <a href="/Account/Logout" class="btn btn-outline-light">Sair</a>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-outline-light me-2">Entrar</a>
                        <a href="/Account/Register" class="btn btn-primary">Registrar</a>
                    }
                </div>
            </header>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            <!-- Anúncio Discreto -->
            <div class="ad-container-footer my-2">
                <ins class="adsbygoogle"
                     style="display:inline-block;width:468px;height:60px"
                     data-ad-client="ca-pub-2351748174167881"
                     data-ad-slot="ID-DO-SLOT-INFERIOR"></ins>
                <script>
                     (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            <span class="text-white-50">&copy; 2024 - Extrator ROFL</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
